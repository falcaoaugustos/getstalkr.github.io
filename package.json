{
  "name": "getstalk.kr",
  "version": "0.1.0",
  "description": "stalkr Official Website",
  "homepage": "getstalk.kr",
  "repository": "stalkr-io/getstal.kr",
  "license": "MIT",
  "author": "ythecombinator <matheus.brasil10@gmail.com>",
  "private": true,
  "engines": {
    "node": "^6.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "backstopjs": "^2.0.4",
    "bower": "^1.7.9",
    "browser-sync": "^2.17.3",
    "eslint": "^3.6.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.1",
    "gh-pages": "^0.11.0",
    "html-minifier-cli": "^0.1.0",
    "html-validator-cli": "^3.0.1",
    "husky": "^0.11.9",
    "imagemin-cli": "^3.0.0",
    "kouto-swiss": "^0.13.1",
    "node-sass": "^4.5.3",
    "npm-check": "^5.2.3",
    "npm-run-all": "^3.1.0",
    "onchange": "^3.0.2",
    "opn-cli": "^3.1.0",
    "plato": "^1.7.0",
    "pug": "^2.0.0-beta6",
    "rupture": "^0.6.2",
    "sass-lint": "^1.10.2",
    "sitespeed.io": "^3.11.8",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "start": "run-s build watch",
    "clean": "rm -rf dist && mkdir dist",
    "postinstall": "bower install",
    "prestart": "yarn",
    "pretest": "yarn",
    "build:templates:validator": "html-validator --file=dist/index.html --verbose --format=gnu",
    "build:templates:html": "cp -rf src/templates/*.html dist",
    "build:templates": "run-s build:templates:html build:templates:validator && cp -rf src/manifest.json dist",
    "build:scripts:babel": "babel -p -d node_modules/.babel-cache src/scripts",
    "build:scripts:uglify": "mkdir -p dist/js && uglifyjs node_modules/.babel-cache/*.js -m -c -o dist/js/main.min.js && rm -rf node_modules/.babel-cache",
    "build:scripts:eslint": "eslint -c .eslintrc src/js",
    "build:scripts": "run-s build:scripts:eslint build:scripts:babel build:scripts:uglify",
    "build:styles:sass": "mkdir -p dist/css && node-sass --include-path src/styles compressed -o dist/css",
    "build:styles:lint": "sass-lint -c .sass-lint.yml 'src/styles/*.scss' -v -q",
    "build:styles": "run-s build:styles:lint build:styles:sass",
    "build:vendor": "cp -rf src/vendor dist",
    "build:images:imagemin": "imagemin src/images/* -o dist/images",
    "build:images": "run-s build:images:imagemin",
    "build:docs": "cp -rf *.md dist",
    "build:domainConfig": "echo getstalk.kr > dist/CNAME",
    "build": "run-s clean build:templates build:scripts build:styles build:vendor build:images build:docs build:domainConfig",
    "serve": "browser-sync start -s dist -f dist",
    "watch:templates": "onchange 'src/templates' 'src/config.json' -- yarn build:templates",
    "watch:scripts": "onchange 'src/scripts' -- yarn build:scripts",
    "watch:styles": "onchange 'src/styles' -- yarn build:styles",
    "watch:vendor": "onchange 'src/vendor' -- yarn build:vendor",
    "watch:images": "onchange 'src/images' -- yarn build:images",
    "watch:docs": "onchange '*.md' -- yarn build:docs",
    "watch": "run-p watch:templates watch:scripts watch:styles watch:vendor watch:images watch:docs serve",
    "test:npm": "npm-check -u",
    "test": "yarn build",
    "deploy": "node tasks/deploy/gh-pages.js"
  }
}
